<%= simple_form_for(@custom_input, html: { class: 'form-vertical' }) do |f| %>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6">
        <%= f.input :description, label: "Descrição", autofocus: true, placeholder: 'Digite uma descrição' %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-4 col-sm-4 col-md-2">
        <%= f.input :input_type, label: 'Tipo', :as => :select, :collection => CustomInput.input_types.keys.to_a %>
      </div>
      <div class="col-xs-8 col-sm-8 col-md-4">
        <%= f.input :amount, label: "Valor Pago", wrapper: :vertical_input_group do %>
            <span class="input-group-addon">R$</span>
            <%= f.text_field :amount, class: "form-control", value: f.object.amount.real %>
        <% end %>
      </div>
    </div>

    <%= f.button :submit, "Gravar", class: 'btn btn-primary' %>
    <%= link_to "Cancelar", custom_inputs_url, {:class=>"btn btn-danger"} %>
<% end %>