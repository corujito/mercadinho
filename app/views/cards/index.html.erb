<div class="page-header clearfix">
  <div class="pull-right">
    <div class="btn-group">
      <%= link_to 'Novo Cartão', new_card_path, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="pull-left">
    <h1>Lista dos últimos cartões<small></small></h1>
    <form class="" role="search">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Localizar o cartão por código ou nome" name="srch-term" id="srch-term">
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th class="col-md-3">Nome</th>
      <th>Identificação</th>
      <th>CPF</th>
      <th class="col-md-1 text-center">Editar</th>
      <th class="col-md-1 text-center">Remover</th>
    </tr>
    </thead>

    <tbody>
    <% @cards.each do |card| %>
        <tr>
          <td><%= link_to card.full_name, card %></td>
          <td><%= card.identification %></td>
          <td><%= card.cpf %></td>
          <td class="text-center"><%= link_to edit_card_path(card) do %><span class="glyphicon glyphicon-edit" aria-hidden="true"></span><% end %></td>
          <td class="text-center"><%= link_to card, method: :delete, data: { confirm: 'Tem certeza?' } do %><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><% end %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br>
<%= paginate @cards %>
