<%= simple_form_for(@card, html: { class: 'form-horizontal' }) do |f| %>

  <div class="form-inputs">
    <%= f.input :full_name, label: 'Nome', autofocus: true %>
    <%= f.input :phone, label: "Telefone" %>
    <%= f.input :email %>
    <%= f.input :identification %>
    <%= f.input :password %>
    <%= f.input :value %>
    <%= f.input :discount %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
    <%= link_to "Cancelar", cards_url, {:class=>"btn btn-danger"} %>
  </div>
<% end %>
