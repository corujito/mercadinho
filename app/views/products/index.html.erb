<h1>Lista de Produtos</h1>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th class="col-md-3">Nome</th>
      <th>Unidade</th>
      <!--<th class="col-md-1"></th>-->
      <th class="col-md-1"></th>
      <th class="col-md-1"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.full_name, product %></td>
        <td><%= product.unity %></td>
        <!--<td><%= link_to 'Exibir', product %></td>-->
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Remover', product, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Novo Produto', new_product_path, class: "btn btn-primary" %>
