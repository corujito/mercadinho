<%= simple_form_for(@product, html: { class: 'form-vertical' }) do |f| %>
    <%= f.input :full_name, label: 'Nome', autofocus: true %>
    <%= f.input :unity, label: 'Unidade', :as => :select, :collection => Product.unities.keys.to_a %>
    <%= f.input :in_stock, label: 'Estoque Atual' %>
    <%= f.button :submit, "Gravar", class: 'btn btn-primary' %>
    <%= link_to "Cancelar", products_url, {:class=>"btn btn-danger"} %>
<% end %>
