<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Por favor, fa√ßa login.</h2>

    <%= f.label :username, class: "sr-only" %>
    <%= f.text_field :username, class: "form-control", placeholder:"Username", required: true, autofocus: true %>

    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, class: "form-control", placeholder:"Password", required: true, autocomplete: "off" %>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <%= f.check_box :remember_me, value: "lembre-me" %>
      <%= f.label :remember_me, "Lembre-me" %>
    </div>
  <% end -%>

    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>

<% end %>

