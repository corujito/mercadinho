<h2>Edição de Conta</h2>

<%= simple_form_for(resource, as: resource_name, url: user_registration_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>

  <%= f.input :email, label: 'Email', autofocus: true %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Aguardando confirmação para: <%= resource.unconfirmed_email %></div>
  <% end %>

  <%= f.input :password, label: 'Nova Senha (deixe em branco caso não queira alterar a senha)', autocomplete: "off" %>

  <%= f.input :password_confirmation, label: 'Confirmação de Nova Senha', autocomplete: "off" %>

  <%= f.input :current_password, label: 'Senha Atual', autocomplete: "off" %>

  <%= f.button :submit, "Atualizar Conta", class: 'btn btn-primary' %>
  <%= link_to "Cancelar", root_url, {:class=>"btn btn-danger"} %>
<% end %>
