<%= simple_form_for(@client, html: { class: 'form-vertical' }) do |f| %>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6">
        <%= f.input :full_name, label: "Nome", autofocus: true %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6">
        <%= f.input :balance, label: "Saldo", wrapper: :vertical_input_group do %>
            <span class="input-group-addon">R$</span>
            <%= f.text_field :balance, class: "form-control", value: f.object.balance.real if f.object.balance %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6">
        <%= f.input :email, label: 'Email' %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6">
        <%= f.input :phone, label: 'Telefone' %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6">
        <%= f.input :address, label: 'EndereÃ§o' %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6">
        <%= f.input :active, label: 'Ativo' %>
      </div>
    </div>

    <%= f.button :submit, "Gravar", class: 'btn btn-primary' %>
    <%= link_to "Cancelar", clients_url, {:class=>"btn btn-danger"} %>
<% end %>