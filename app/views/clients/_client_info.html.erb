<div class="panel panel-default collapse in" id="panel_client_info">
  <button type="button" class="close" data-toggle="collapse" data-target="#panel_client_info" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <div class="panel-heading">
    <h3 class="panel-title">CLIENTE: <%= @client.full_name %></h3>
  </div>
  <script>
    var client_id = <%= @client.id %>;
  </script>
  <div class="panel-body">
    <div class="row">
      <div class="col-xs-5 col-sm-5 col-md-5">
        <div>
          <b>Saldo Atual:</b> <span style="<% if @client.balance and @client.balance < 0 then %>color:red<% end %>"><%= number_to_currency(@client.balance) %></span>
        </div>
        <div>
          <% if @client.orders.any? %>
              <b>Ãšltima compra em:</b> <%= l @client.orders.last.created_at, format: "%d/%m/%Y" %>
          <% end %>
        </div>
      </div>
      <div class="col-xs-7 col-sm-7 col-md-7">
        <% if @client.orders.any? %>
            <b>items comprados:</b>
            <ul>
              <% @client.orders.last.order_items.each do |ordered_item| %>
                  <li>
                    <div class=""><%= ordered_item.product.full_name %> - <%= number_to_currency(ordered_item.unit_price) %></div>
                  </li>
              <% end %>
            </ul>
        <% else %>
            Nenhuma compra registrada.
        <% end %>
      </div>
    </div>
  </div>
</div>