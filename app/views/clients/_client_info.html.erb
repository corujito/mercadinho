<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">CLIENTE: <%= @client.full_name %></h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-xs-5 col-sm-5 col-md-5">
        <div>
          <b>Saldo Atual:</b> <%= number_to_currency(@client.balance) %>
        </div>
        <div>
          <% if @client.orders.any? %>
              <b>Ãšltima compra em:</b> <%= l @client.orders.last.created_at, format: "%d/%m/%Y" %>
          <% end %>
        </div>
      </div>
      <div class="col-xs-7 col-sm-7 col-md-7">
        <% if @client.orders.any? %>
            <b>items comprados:</b>
            <ul>
              <% @client.orders.last.order_items.each do |ordered_item| %>
                  <li>
                    <div class=""><%= ordered_item.product.full_name %> - <%= number_to_currency(ordered_item.unit_price) %></div>
                  </li>
              <% end %>
            </ul>
        <% else %>
            Nenhuma compra registrada.
        <% end %>
      </div>
    </div>
  </div>
</div>