
<h1><%= @client.full_name %></h1>
<hr>
<style>
    .borderless tbody tr td, .borderless tbody tr th, .borderless thead tr th {
        border: none;
    }
</style>
<div class="table-responsive">
  <table class='table borderless'>
    <tbody>
    <tr><td class="col-md-2"><b>Saldo:</b></td><td style="<% if @client.balance and @client.balance < 0 then %>color:red<% end %>"><%= number_to_currency(@client.balance) %></td></tr>
    <tr><td class="col-md-2"><b>Email:</b></td><td><%= @client.email %></td></tr>
    <tr><td class="col-md-2"><b>Telefone:</b></td><td><%= @client.phone %></td></tr>
    <tr><td class="col-md-2"><b>Endere√ßo:</b></td><td><%= @client.address %></td></tr>
    <tr><td class="col-md-2"><b>Ativo:</b></td><td><%= @client.active %></td></tr>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'Editar', edit_client_path(@client), class: "btn btn-primary" %>
<%= link_to 'Voltar', clients_path, class: "btn btn-default" %>
